<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipeDetailsActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="190dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_recipeDetailsActivityRecipeImage2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_recipeDetailsActivityRecipeImage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scrollView2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Meal Type"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"/>
            <TextView
                    android:text="Meal Type"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityMealType"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Number of Serving"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"/>
            <TextView
                    android:text="Number Of Serving"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityNumberOfServing"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Recipe Name"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"/>
            <TextView
                    android:text="Recipe Name"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityRecipeName"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Cook Time"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10"/>
            <TextView
                    android:text="Cook Time"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityCookTime"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Ingredients"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11"/>
            <TextView
                    android:text="Ingredients"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityIngredients"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Instructions"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView12"/>
            <TextView
                    android:text="Instructions"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_addRecipeActivityInstructions"
                    android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>